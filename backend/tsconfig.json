{
  "compilerOptions": {
      "module": "esnext",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "esnext",
      "noImplicitAny": false,
      "moduleResolution": "node",
      "inlineSourceMap": true,
      "outDir": "dist",
      "allowJs": true,
      "resolveJsonModule": true,
      "paths": {
          "*": [
              "src/*"
          ]
      },
      "baseUrl": "./src",
      "incremental": true
  },
  "include": [
      "src/**/*",
  ],
  "exclude": [
      "node_modules"
  ]
}